<RadzenHeader class="rz-shadow-1" Style="background:white; color:black">
	<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
		<RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" Style="color:black" />
		<RadzenLabel Text="Header" />
	</RadzenStack>
</RadzenHeader>
<RadzenSidebar Responsive="false" Style="@(GetSidebarStyle())">
	<RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Style="padding:1rem 0">
		<RadzenImage Style="@(GetLogoStyle())" Path="@(sidebarExpanded ? "image/Logo.png" : "icons/LogoWithNoText.svg")" />
	</RadzenStack>
	<RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false" AlignItems="AlignItems.Center">
		<RadzenPanelMenuItem Text="Genel" Icon="home" />
		<RadzenPanelMenuItem Text="Görüşmeler" Icon="calendar_month" />
		<RadzenPanelMenuItem Text="Satışlar" Icon="payments" />
		<RadzenPanelMenuItem Text="Paketler" Icon="list_alt" />
		<RadzenPanelMenuItem Text="Kullanıcılar" Icon="group" />
		<RadzenPanelMenuItem Text="Mentorlar" Icon="partner_exchange" />
		<RadzenPanelMenuItem Text="Ayarlar" Icon="settings" />
	</RadzenPanelMenu>
</RadzenSidebar>

@code {
	bool sidebarExpanded = false;
	bool showLogo = true;

	private void ToggleSidebarAndLogo()
	{
		sidebarExpanded = !sidebarExpanded;
		showLogo = sidebarExpanded;
	}
	private string GetSidebarStyle()
	{
		return sidebarExpanded ? "width:250px" : "width:max-content";
	}
	private string GetLogoStyle()
	{
		return sidebarExpanded ? "width:200px" : "width:40px";
	}
}
